<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AvaloniaApplication1"
        x:Class="AvaloniaApplication1.MainWindow"
        x:DataType="local:MainWindow"
        Width="900"
        Height="600"
        Title="Inventory System">

  <!-- ét root-element: DockPanel -->
  <DockPanel>

    <!-- nederste del: knap + status -->
    <StackPanel DockPanel.Dock="Bottom">
      <Button Content="Process next order"
              Click="OnProcessOrderClick"
              Width="200"
              HorizontalAlignment="Left" />
      <TextBlock x:Name="StatusMessages"
                 TextWrapping="Wrap"
                 Height="120"
                 FontFamily="Consolas"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Stretch" />
    </StackPanel>

    <!-- øverste del: dit eksisterende grid med to datagrids -->
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <!-- venstre datagrid -->
      <DataGrid Grid.Column="0"
                ItemsSource="{Binding Orders}"
                AutoGenerateColumns="False"
                GridLinesVisibility="All">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Time"  Binding="{Binding Time}" />
          <DataGridTextColumn Header="Items" Binding="{Binding LinesSummary}" />
          <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice}" />
        </DataGrid.Columns>
      </DataGrid>

      <!-- højre datagrid -->
      <DataGrid Grid.Column="1"
                ItemsSource="{Binding ProcessedOrders}"
                AutoGenerateColumns="False"
                GridLinesVisibility="All">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Time"  Binding="{Binding Time}" />
          <DataGridTextColumn Header="Items" Binding="{Binding LinesSummary}" />
          <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice}" />
        </DataGrid.Columns>
      </DataGrid>

    </Grid>

  </DockPanel>
</Window>
